<h1>Your Todos</h1>

{{#if isAdding}}
  {{todo-list-form on-submit=(action "submitForm") on-cancel=(action "hideAddForm")}}
{{else}}
  <button class="btn" type="button" {{action "showAddForm"}}>Add New</button>
{{/if}}
{{todo-list items=todos filter=todoFilter on-item-change=(action "updateTodo")}}
{{todo-list-filter on-change=(action "filterTodos")}}
